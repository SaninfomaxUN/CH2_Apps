<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE9FF"
    android:backgroundTint="#DBE9FF"
    tools:context=".CalculadoraActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbf4f4"
        tools:layout_editor_absoluteX="-75dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnRegresar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="5dp"
                    android:background="#FFFFFF"
                    android:contentDescription="@string/regresar"
                    android:foregroundGravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/back_arrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Envases y Empaques"
                android:textColor="#2B8143"
                android:textSize="28sp"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#2B5981"
                android:text="Consultar Evento"
                android:textSize="24sp" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:padding="5dp"
                tools:ignore="MissingConstraints"
                app:rowCount="5"
                app:columnCount="5"
                app:useDefaultMargins="true"
                app:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_row="0"
                    app:layout_column="1">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="PLÁSTICO"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/editTextPlastico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:gravity="center|center_horizontal"
                        android:hint="Kilogramos"
                        android:layout_weight="1"
                        android:inputType="numberDecimal" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/image_84"
                    app:layout_gravity="center_horizontal|center_vertical"
                    app:layout_row="0"
                    app:layout_column="3" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_row="1"
                    app:layout_column="1">
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ALUMINIO"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextAluminio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:gravity="center"
                        android:hint="Kilogramos"
                        android:layout_weight="1"
                        android:inputType="numberDecimal" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/image_75"
                    app:layout_gravity="center_horizontal|center_vertical"
                    app:layout_row="1"
                    app:layout_column="3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_row="2"
                    app:layout_column="1">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="CARTÓN"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextCarton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:gravity="center"
                        android:hint="Kilogramos"
                        android:layout_weight="1"
                        android:inputType="numberDecimal" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/image_78"
                    app:layout_gravity="center_horizontal|center_vertical"
                    app:layout_row="2"
                    app:layout_column="3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_row="3"
                    app:layout_column="1">
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="TETRA PACK"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextTetraPack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:gravity="center|center_horizontal"
                        android:hint="Kilogramos"
                        android:layout_weight="1"
                        android:inputType="numberDecimal" />

                </LinearLayout>



                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/image_76"
                    app:layout_gravity="center_horizontal|center_vertical"
                    app:layout_row="3"
                    app:layout_column="3" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_row="4"
                    app:layout_column="1">
                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="VIDRIO"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/editTextVidrio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:gravity="center|center_horizontal"
                        android:hint="Kilogramos"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:layout_row="4"
                        android:layout_column="3"/>

                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/image_74"
                    app:layout_gravity="center_horizontal|center_vertical"
                    app:layout_row="4"
                    app:layout_column="3" />




            </androidx.gridlayout.widget.GridLayout>


            <Button
                android:id="@+id/registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#2B8143"
                android:text="Registrar Consumo"
                android:textSize="20sp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
