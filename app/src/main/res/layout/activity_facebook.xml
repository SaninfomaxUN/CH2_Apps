<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Facebook"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/arrow_3" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="298dp"
        android:layout_height="75dp"
        android:src="@drawable/image_10"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="502dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="90dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión en Facebook"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Correo electrónico o número de teléfono"
                android:inputType="textEmailAddress"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextText4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:hint="Contraseña" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/Azul_Sueve"
                android:text="Iniciar sesión"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="19dp"
                android:text="¿Olvidaste tu cuenta?"
                android:textColor="@color/Azul_Sueve"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:layout_weight="1"
                android:backgroundTint="@color/Verde_Suave"
                android:text="Crear cuenta nueva"

                android:textSize="22sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>